/ {
  macros {
    hyp: hyper {
      compatible = "zmk,behavior-macro";
      #binding-cells = <0>;
      bindings = <&sk LG(LA(LCTRL))>;
    };

    hypk: hyper_key {
      compatible = "zmk,behavior-macro-one-param";
      #binding-cells = <1>;
      bindings = <&hyp>, <&macro_param_1to1>, <&kp MACRO_PLACEHOLDER>;
    };
  };
};
