/ {
  macros {
    hyp: hyper {
      compatible = "zmk,behavior-macro";
      #binding-cells = <0>;
      bindings = <&kp LG(LA(LCTRL))>;
    };

    hypk: hyper_key {
      compatible = "zmk,behavior-macro-one-param";
      #binding-cells = <1>;
      bindings = <&macro_param_1to1>, <&kp LG(LA(LCTRL(MACRO_PLACEHOLDER)))>;
    };
  };
};
