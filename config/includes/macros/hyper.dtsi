/ {
  macros {
    hyp: hyper {
      compatible = "zmk,behavior-macro";
      #binding-cells = <0>;
      bindings = <&sk LG(LS(LA(LCTRL)))>;
    };

    hypk: hyper_key {
      compatible = "zmk,behavior-macro-one-param";
      #binding-cells = <1>;
      bindings = <&macro_param_1to1>, <&hyp>;
    };
  };
};
